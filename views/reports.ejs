
<%- include('partials/header', { banner }) %>
<div class="card">
  <div class="hd"><h2>Reports</h2></div>
  <div class="bd">
    <form method="post" id="bulkForm" class="js-loading-form" style="display:inline">
      <button class="btn primary" type="submit" formaction="/reports/send">Send Mail</button>
      <button class="btn danger" type="submit" formaction="/reports/delete">Delete Selected</button>
      <a class="btn" href="/reports/export" data-show-loader>Download Excel</a>
      <div style="height:12px"></div>
      <div class="table-wrap">
        <table>
        <thead>
          <tr>
            <th style="width:36px"><input type="checkbox" data-select-all></th>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Email ID</th>
            <th>Count</th>
            <th>LOP Dates</th>
            <th>Absent Dates</th>
            <th>Absent count</th>
            <th>LOP count</th>
            <th>Created</th>
            <th>Batch</th>
          </tr>
        </thead>
        <tbody>
          <% records.forEach(r => { %>
            <tr>
              <td><input type="checkbox" name="ids" value="<%= r.id %>" form="bulkForm"></td>
              <td class="k"><%= r.emp_id || '' %></td>
              <td><%= r.emp_name || '' %></td>
              <td><%= r.recipient || '' %></td>
              <td class="k"><%= r.total_count %></td>
              <td><%= r.lop_dates || '' %></td>
              <td><%= r.absent_dates || '' %></td>
              <td class="k"><%= r.absent_count %></td>
              <td class="k"><%= r.lop_count %></td>
              <td class="k"><%= r.created_at %></td>
              <td><%= r.batch_key || '' %></td>
            </tr>
          <% }) %>
        </tbody>
        </table>
      </div>
    </form>
  </div>
</div>
<%- include('partials/footer') %>
